{
  "compilerOptions": {
    /* Base Options: */
    "baseUrl": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    /* Strictness */
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    /* If NOT transpiling with TypeScript: */
    "moduleResolution": "Bundler",
    "module": "es2022",
    "noEmit": true,
    "lib": ["es2022"],
    "types": ["./worker-configuration.d.ts", "@types/node", "@types/service-worker-mock"],
    "paths": {
      "~/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist", "tests"],
  "include": ["src", "types/worker-configuration.d.ts", "types/hono.d.ts"]
}
