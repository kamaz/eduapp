{
  "name": "eduapp",
  "private": true,
  "version": "0.1.0",
  "description": "Personalised learning for children with AI-generated activities aligned to the UK National Curriculum.",
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:worker": "turbo run dev --filter=worker",
    "dev:emulators": "turbo run dev --filter=@eduapp/firebase-emulator",
    "test": "turbo run test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "prepare": "husky",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' + && rm -rf .turbo"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.4.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2",
    "@eslint/js": "^9.37.0",
    "vitest": "^2.1.5",
    "@vitest/coverage-v8": "^2.1.9"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm exec eslint --fix --max-warnings 0"
    ],
    "*.{md,mdx,json,yml,yaml}": [
      "pnpm exec prettier --write"
    ]
  }
}
